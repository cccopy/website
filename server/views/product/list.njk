
{% set pageinfo = { headtitle: '產品列表', wrapcls: 'inpage' } %}

{% import "macros.njk" as macros %}

{% extends "base.njk" %}

{% block content %}
	
	{% include "crumbnav.njk" %}

	<section class="sort">
		<div class="container">
			<span>排序：</span>
			<a class="active" href="#">最新</a>
			<a href="#">價格</a>
			<a href="#">收藏</a>
		</div>
	</section>

	<section class="content">
		<div class="container">
			<!-- <div class="searchnote">
				搜尋結果：<br>共有 <span>15</span> 項符合 <span>廣告</span> 搜尋條件的影音項目。
			</div> -->
			<div class="upgrate">
				<a href="#" class="btn
				 openUpgrate">升級為VIP會員</a> <br>即可瀏覽本頁全部影音商品
			</div>
			{% for item in items %}
			<div class="plist">
				<div class="plbx row">
					<div class="col-sm-6 img">
						<div class="video">
							<iframe width="100%" height="100%" src="{{ item.mainUrl|youtubeEmbed }}" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
						</div>
					</div>
					<div class="col-sm-6 meat">
						<h3>{{ item.title }}</h3>
						<p>{{ item.description }}</p>
						{{ macros.taglist(item.keywordLabels) }}
						<a main-pjax-link href="/items/{{ item.id }}" class="btn"><span>詳細規格</span></a>
					</div>
				</div>
			</div>
			{% endfor %}
			<div class="loading">
				<a href="#" class="btn btnBorder">載入更多</a>
			</div>
		</div>
	</section>

{% endblock %}